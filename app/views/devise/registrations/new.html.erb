<h2>Cadastro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                label: "Nome",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nome" }%>
    <%= f.input :last_name,
                label: "Sobrenome",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "sobrenome" }%>
    <%= f.input :email,
                label: "E-mail",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "e-mail" }%>
    <%= f.input :password,
                label: "Senha",
                required: true,
                hint: ("mÃ­nimo de caracteres: #{@minimum_password_length}" if @minimum_password_length),
                input_html: { autocomplete: "nova-senha" } %>
    <%= f.input :password_confirmation,
                label: "ConfirmaÃ§Ã£o de senha",
                required: true,
                input_html: { autocomplete: "nova-senha" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirmar cadastro" %>
  </div>
<% end %>

