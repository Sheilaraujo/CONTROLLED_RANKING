<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                label: "Senha",
                hint: "Deixe em branco se você não quiser alterar a senha",
                required: false,
                input_html: { autocomplete: "nova-senha" } %>
    <%= f.input :password_confirmation,
                label: "Confirmação de senha",
                required: false,
                input_html: { autocomplete: "nova-senha" } %>
    <%= f.input :current_password,
                label: "Senha atual"
,                hint: "Nós precisamos de sua senha atual para confirmar suas alterações",
                required: true,
                input_html: { autocomplete: "senha-atual" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualização" %>
  </div>
<% end %>

<h3>Cancelamento de conta</h3>

<p>Insatisfeito? <%= link_to "Cancele a minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
