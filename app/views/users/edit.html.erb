<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Edit Profile</h2>

    <%= simple_form_for current_user do |f| %>
      <%= f.input :name %>
      <%= f.input :last_name %>
      <%= f.input :about_me %>
      <%= f.input :difficulty, include_blank: false, priority: [ "Iniciante" ], collection: [ "Iniciante", "C", "B", "A", "Pro"] %>
      <%= f.input :email %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
