<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: 'E-mail',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "nome@dominio.com" } %>
    <%= f.input :password,
                label: 'Senha',
                required: false,
                input_html: { autocomplete: "senha-atual" } %>
    <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
